<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pb.pblog.repository.UserMapper">
<!--    로그인-->
    <select id="login" parameterType="com.pb.pblog.dto.LoginRequestDTO"  resultType="int">
        select count(*)
        from user
        where id=#{id} and password=#{password}
    </select>


<!--중복확인-->
    <select id="checkId" parameterType="java.lang.String" resultType="int">
        select count(*)
        from user
        where id=#{id}
    </select>

<!--    회원가입-->
    <insert id="signup" parameterType="com.pb.pblog.dto.SignupRequestDTO" >
        insert into user(id,password,nickname,role)
        values(
        #{id},
        #{password},
        #{nickname},
        "user"
        )
    </insert>
</mapper>