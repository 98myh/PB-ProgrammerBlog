<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pb.pblog.repository.UserMapper">

<!--중복확인-->
    <select id="checkId" parameterType="java.lang.String" resultType="int">
        select count(*)
        from user
        where id=#{id}
    </select>

<!--    유저 정보 조회-->
    <select id="userDetails" parameterType="com.pb.pblog.dto.UserDTO">
        select id,password,role
        from user
        where id=#{id}
    </select>

<!--    회원가입-->
    <insert id="signup" parameterType="com.pb.pblog.dto.SignupRequestDTO" >
        insert into user(id,password,nickname,role)
        values(
        #{id},
        #{password},
        #{nickname},
        "user"
        )
    </insert>
</mapper>